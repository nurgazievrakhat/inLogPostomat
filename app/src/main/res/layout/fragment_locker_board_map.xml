<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Кнопка Назад -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Назад"
        android:textSize="18sp"
        android:background="@drawable/bg_button_outline"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp" />

    <!-- Логотип -->
    <ImageView
        android:id="@+id/logoInlog"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:src="@drawable/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Контакт-центр и кнопка i -->
    <LinearLayout
        android:id="@+id/contactLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvContactLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Контакт-центр"
                android:textColor="#BDBDBD"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+995 550 500 500"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
        <Button
            android:id="@+id/btnInfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="i"
            android:textSize="22sp"
            android:background="@drawable/bg_button_outline"
            android:textColor="#000"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заберите посылку из ячейки"
        android:textColor="#000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logoInlog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Подзаголовок -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пожалуйста, заберите посылку и закройте ячейку"
        android:textColor="#BDBDBD"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Сетка 4x4 -->
    <GridLayout
        android:id="@+id/gridLockers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <!-- Ячейки -->
        <TextView android:tag="1" android:id="@+id/lock1" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="2" android:id="@+id/lock2" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="3" android:id="@+id/lock3" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="4" android:id="@+id/lock4" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="5" android:id="@+id/lock5" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="6" android:id="@+id/lock6" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="7" android:id="@+id/lock7" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="8" android:id="@+id/lock8" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="9" android:id="@+id/lock9" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="10" android:id="@+id/lock10" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="11" android:id="@+id/lock11" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="12" android:id="@+id/lock12" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="13" android:id="@+id/lock13" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="14" android:id="@+id/lock14" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="15" android:id="@+id/lock15" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
        <TextView android:tag="16" android:id="@+id/lock16" android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/locker_border" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>