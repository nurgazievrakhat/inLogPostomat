<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.numberPad.EnterNumberFragment"
    android:padding="24dp">

    <!-- Кнопка Назад -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="Назад"
        android:background="@drawable/bg_button_outline"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Логотип -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:src="@drawable/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Контакт-центр -->
    <LinearLayout
        android:id="@+id/contactLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contactLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Контакт-центр"
                android:textColor="#BDBDBD"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/contactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+995 550 500 500"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonInfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="i"
            android:background="@drawable/bg_button_outline"
            android:textColor="#000"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Введите код -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите код"
        android:textStyle="bold"
        android:layout_marginStart="294dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="65dp"/>

    <!-- Подпись -->
    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Код приходил в ваши сообщения"
        android:textColor="#BDBDBD"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="@id/textTitle"
        android:layout_marginTop="8dp"/>

    <!-- Поле для кода -->
    <EditText
        android:id="@+id/etCodeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0000"
        android:textSize="28sp"
        android:maxLength="4"
        android:maxLines="1"
        android:inputType="number"
        android:background="@null"
        android:textColor="#BDBDBD"
        app:layout_constraintTop_toBottomOf="@id/textSubtitle"
        app:layout_constraintStart_toStartOf="@id/textTitle"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Клавиатура (keypad) -->
    <GridLayout
        android:id="@+id/keypadGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_marginStart="65dp"
        app:layout_constraintTop_toTopOf="@id/textTitle"
        app:layout_constraintStart_toEndOf="@id/textSubtitle"
        android:layout_marginTop="0dp">

        <!-- 12 кнопок, как на макете -->
        <Button android:id="@+id/btn1" android:layout_width="56dp" android:layout_height="56dp" android:text="1" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btn2" android:layout_width="56dp" android:layout_height="56dp" android:text="2" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btn3" android:layout_width="56dp" android:layout_height="56dp" android:text="3" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btn4" android:layout_width="56dp" android:layout_height="56dp" android:text="4" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btn5" android:layout_width="56dp" android:layout_height="56dp" android:text="5" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btn6" android:layout_width="56dp" android:layout_height="56dp" android:text="6" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btn7" android:layout_width="56dp" android:layout_height="56dp" android:text="7" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btn8" android:layout_width="56dp" android:layout_height="56dp" android:text="8" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btn9" android:layout_width="56dp" android:layout_height="56dp" android:text="9" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btnX" android:layout_width="56dp" android:layout_height="56dp" android:text="x" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btn0" android:layout_width="56dp" android:layout_height="56dp" android:text="0" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
        <Button android:id="@+id/btnDelete" android:layout_width="56dp" android:layout_height="56dp" android:text="⌫" android:background="@drawable/bg_button_outline" android:textColor="#000" android:layout_margin="8dp"/>
    </GridLayout>

    <!-- Кнопка Отправить -->
    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Отправить"
        android:backgroundTint="#2196F3"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/keypadGrid"
        app:layout_constraintStart_toStartOf="@id/textTitle"
        app:layout_constraintEnd_toEndOf="@id/keypadGrid"
        android:layout_marginTop="32dp"/>

    <!-- или -->
    <TextView
        android:id="@+id/textOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="или"
        android:textColor="#BDBDBD"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/buttonEnter"
        app:layout_constraintStart_toStartOf="@id/buttonEnter"
        app:layout_constraintEnd_toEndOf="@id/buttonEnter"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка Сканировать -->
    <Button
        android:id="@+id/buttonScan"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Сканировать"
        android:background="@drawable/bg_button_outline"
        android:textColor="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/textOr"
        app:layout_constraintStart_toStartOf="@id/buttonEnter"
        app:layout_constraintEnd_toEndOf="@id/buttonEnter"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>