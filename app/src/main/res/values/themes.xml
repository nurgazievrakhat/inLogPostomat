<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SampleUSBproject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.SampleUSBproject" parent="Base.Theme.SampleUSBproject" />

    <style name="BlueRoundedBtn" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="BlueStrokedBtn" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="WhiteRoundedBtn" parent="Widget.Material3.Button">
        <item name="strokeColor">#1A000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">#4D000000</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Deselected" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/black_10</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/shadow_black</item>
        <item name="backgroundTint">@color/white_light</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Selected" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/blue_baby</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@color/blue_hovered</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="KeyboardButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#181C4A</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">9dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="KeyboardKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">#F1F1F1</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>